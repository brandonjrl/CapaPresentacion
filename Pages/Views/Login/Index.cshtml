@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
</head>
<body style="background-color: #e9ecef">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex align-items-center min-vh-100">
                    <div class="w-100 d-block my-5">
                        <div class="row justify-content-center">
                            <div class="col-md-8 col-lg-5">
                                <div class="card shadow-lg">
                                    <div class="card-body">
                                        <div class="text-center mb-4 mt-3">
                                            <a href="#">
                                                <span><img src="@Url.Content("~/Content/imganes/logodgac.jpg")" alt="" height="100"></span>
                                            </a>
                                        </div>

                                        <!-- Mostrar mensaje de error si existe -->
                                        @if (ViewBag.Error != null)
                                        {
                                            <div class="alert alert-danger text-center">
                                                @ViewBag.Error
                                            </div>
                                        }

                                        <form action="@Url.Action("Index", "Login")" method="post" class="p-2">
                                            <div class="form-group">
                                                <label for="Codigo" class="col-form-label text-primary">Usuario</label>
                                                <input class="form-control" type="text" name="Codigo" required autocomplete="off" />
                                            </div>
                                            <div class="form-group">
                                                <label for="clave" class="col-form-label text-primary">Contraseña</label>
                                                <div class="input-group">
                                                    <input id="clave" class="form-control" type="password" name="clave" required autocomplete="off" />
                                                    <div class="input-group-append">
                                                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()" tabindex="-1">
                                                            <i class="fa fa-eye" id="toggleIcon"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mb-3 text-center">
                                                <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
                                            </div>

                                            <div class="text-center">
                                                <a href="#" class="text-muted" data-toggle="modal" data-target="#forgotPasswordModal">¿Olvidaste tu contraseña?</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <div class="row mt-4">
                                    <div class="col-sm-12 text-center">
                                        <p class="text-black mb-0">
                                            Todos los derechos reservados &copy;
                                            <a href="https://www.aviacioncivil.gob.ec" target="_blank" class="text-black ml-1">
                                                <b>DGAC - Dirección de Aviación Civil del Ecuador</b>
                                            </a>
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de recuperación de contraseña -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-body p-4">
                    <p class="mb-4" style="color: black;">
                        Si ha olvidado su clave o no puede acceder al transamite en línea, registre la dirección del correo electrónico. Para que le llegue la nueva contraseña temporal.
                    </p>
                    <form>
                        <div class="form-group">
                            <label for="correoRecuperacion" ><b style="color: black;">Correo electrónico: <span class="text-danger">*</span></b></label>
                            <input type="email" class="form-control" id="correoRecuperacion" placeholder="Ingrese su correo" required />
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">
                                <i class="fa fa-times"></i> Cancelar
                            </button>
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fa fa-envelope"></i> Enviar
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="@Url.Content("~/Scripts/Views/Login_Index.js")" type="text/javascript"></script>

</body>
</html>
