@{
    ViewBag.Title = "Visualización Tabla Solo Lectura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-secondary">
    <div class="card-header bg-info text-white text-center">
        Tabla
    </div>
    <div class="card-body">
        <div class="mb-3 text-right">
            <button id="btnNuevo" class="btn btn-sm btn-success">
                <i class="fa fa-plus"></i> Nuevo registro
            </button>
        </div>
        <table id="tablaVisualizacion" class="table table-bordered table-hover table-sm">
            <thead class="thead-light">
                <tr id="thead-columns">
                    <!-- Columnas desde JS -->
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- Modal solo visualización -->
<div class="modal fade" id="formVisualizacion" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Detalle del Registro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formDetalle" readonly>
                    <div class="row" id="detalleCampos">
                        <!-- Campos generados desde JS -->
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para agregar nuevo registro -->
<div class="modal fade" id="formNuevoRegistro" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="tituloModalFormulario">Nuevo Registro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formNuevo" enctype="multipart/form-data">
                    <div class="row" id="nuevoCampos">
                        <!-- Campos generados desde JS -->
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
                <button id="btnGuardarNuevo" type="button" class="btn btn-primary btn-sm">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="@Url.Content("~/Scripts/Views/Tabla.js")" type="text/javascript"></script>
}
