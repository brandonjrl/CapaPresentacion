<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1" />
    <meta charset="utf-8" />
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Last-Modified" content="0">
    <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
    <meta http-equiv="Pragma" content="no-cache">

    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/imganes/logo2.jpg" />
    <title>@* @ViewBag.Title *@ PAGE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/PluginsCSS")
    @RenderSection("estilos", required: false)
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini pace-primary layout-navbar-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <img src="~/Content/assets/imganes/align.png" />
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <p class="nav-link">
                        Dirección General de Aviación Civil del Ecuador
                    </p>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/Content/imganes/user.png" style="width:30px" alt="user" class="profile-pic" />
                        @* @if (Session["name"] != null)
                            {
                                <span>@Session["name"].ToString()</span>
                            } *@
                        <span>Usuario</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a href="#" class="dropdown-item">
                            <div class="media">
                                <img src="~/Content/imganes/user.png" alt="User" style="width:30px" class="img-size-50 mr-3 img-circle">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        @* @if (Session["name"] != null)
                                            {
                                                <p class="text-sm"> @Session["name"].ToString() </p>
                                            } *@
                                        <p class="text-sm">Nombre de usuario</p>
                                    </h3>
                                    @* @if (Session["correo"] != null)
                                        {
                                            <p class="text-sm">@Session["correo"].ToString()</p>
                                        } *@
                                    <p class="text-sm">correo@ejemplo.com</p>
                                </div>
                            </div>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="@Url.Action("Salir", "Home")" class="dropdown-item">
                            <div class="media">
                                <img src="~/Content/imganes/power.png" alt="User" style="width:30px" class="mr-3 img-circle">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        Cerrar sesión
                                    </h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-secondary elevation-4">
            <a href="#" class="brand-link">
                <img src="~/Content/imganes/logo2.jpg" alt="Dirección General Aviación Civil - Ecuador" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light form-control-sm">DGAC</span>
            </a>

            <div class="sidebar">
                @* @if (Session["correo"] != null)
                    {
                        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                            <div class="info form-control-sm">
                                <a class="d-block">@Session["correo"].ToString()</a>
                            </div>
                        </div>
                    } *@
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info form-control-sm">
                        <a class="d-block">correo@ejemplo.com</a>
                    </div>
                </div>

                <nav class="mt-2">
                    @Html.Partial("_MenuBar") 
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="@Url.Action("Salir", "Home")" class="nav-link">
                                <i class="fas fa-sign-out-alt"></i>
                                <span><strong>Salir</strong></span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content -->
        <div class="content-wrapper">
            <section class="content">
                <br />
                @RenderBody()
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Versión</b> 0.1.
            </div>
            <strong>Derechos de autor &copy; 2025 <a href="https://www.aviacioncivil.gob.ec" target="_blank" class="text-black ml-1">Dirección Aviación Civil-DGAC</a>.</strong> Reservados todos los derechos.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark"></aside>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/PluginsJS")

    <script type="text/javascript">
        $.extend({ MisUrls: { url: {}, urls: function (a) { $.extend($.MisUrls.url, a); } } });

        $.MisUrls.urls({ Url_datatable_spanish: '@Url.Content("~/Content/plugins/datatables-bs4/css/datatable_spanish.json")' });

        // Lógica comentada de controladores



        function nobackbutton() {
            window.location.hash = "no-back-button";
            window.location.hash = "Again-No-back-button"; // para Chrome
            window.onhashchange = function () { window.location.hash = "no-back-button"; }
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
